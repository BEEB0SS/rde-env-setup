{
  "name": "rde-env-setup",
  "displayName": "rde-env-setup",
  "description": "forge rde mvp 1",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:rde.oneClickSetup",
    "onCommand:rde.about",
    "onCommand:rde.openVisualizer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rde.about",
        "title": "About Forge RDE",
        "category": "ForgeRDE"
      },
      {
        "command": "rde.oneClickSetup",
        "title": "RDE: One-Click Setup",
        "category": "ForgeRDE"
      },
      {
        "command": "rde.openVisualizer",
        "title": "RDE: Repository Visualizer",
        "category": "ForgeRDE"
      },
      {
        "command": "rde.refreshDiagnostics",
        "title": "RDE: Refresh Diagnostics",
        "category": "ForgeRDE"
      }
    ],
    "configuration": {
      "title": "RDE",
      "properties": {
        "rde.aiProvider": {
          "type": "string",
          "default": "gemini",
          "enum": ["gemini", "anthropic"],
          "description": "AI provider for summaries."
        },
        "rde.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API key for AI summaries.",
          "scope": "application"
        },
        "rde.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key for AI summaries.",
          "scope": "application"
        },
        "rde.anthropicModel": {
          "type": "string",
          "default": "",
          "description": "Anthropic model name (required for Anthropic provider).",
          "scope": "application"
        },
        "rde.ttcApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for The Token Company (TTC) compression (optional).",
          "scope": "application"
        }
      }
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "rde-panel",
          "title": "Forge RDE",
          "icon": "resources/forge-rde.svg"
        }
      ]
    },
    "views": {
      "rde-panel": [
        {
          "id": "rde.diagnosticsView",
          "name": "Forge RDE Issues"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "build:webview": "cd webview-ui && pnpm install && pnpm build",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/babel__traverse": "^7.20.0",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
